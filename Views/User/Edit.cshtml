@model KargoTakipUygulaması.Models.EditUserViewModel

@{
    ViewData["Title"] = "Profil Düzenle";
}

<h1 class="text-center">Profil Düzenle</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post" class="p-4 border rounded shadow-sm">
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">Ad</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Soyad</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdentityNumber" class="control-label">Kimlik Numarası</label>
                    <input asp-for="IdentityNumber" class="form-control" />
                    <span asp-validation-for="IdentityNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label">Email</label>
                    <input asp-for="Email" class="form-control" readonly />
                </div>
                <div class="form-group text-center mt-2">
                    <input type="submit" value="Kaydet" class="btn btn-primary btn-block" />
                </div>
                <div class="text-center mt-2">
                    <a asp-action="Profile" class="btn btn-secondary">İptal</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
