@model KargoTakipUygulaması.Models.User

@{
    ViewData["Title"] = "Profil Bilgileri";
}

<h1 class="text-center">Profil Bilgileri</h1>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="p-4 border rounded shadow-sm">
                <div class="form-group">
                    <label>Ad</label>
                    <input class="form-control" value="@Model.FirstName" readonly />
                </div>
                <div class="form-group">
                    <label>Soyad</label>
                    <input class="form-control" value="@Model.LastName" readonly />
                </div>
                <div class="form-group">
                    <label>Kimlik Numarası</label>
                    <input class="form-control" value="@Model.IdentityNumber" readonly />
                </div>
                <div class="form-group">
                    <label>Email</label>
                    <input class="form-control" value="@Model.Email" readonly />
                </div>
                <div class="text-center mt-2">
                    <a asp-action="Edit" class="btn btn-primary btn-block">Düzenle</a>
                </div>
            </div>
        </div>
    </div>
</div>
