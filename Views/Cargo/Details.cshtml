@model KargoTakipUygulaması.Models.Cargo

@{
    ViewData["Title"] = "Kargo Detayları";
}

<h1 class="text-center mt-5">@ViewData["Title"]</h1>

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            Kargo Bilgileri
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RecipientName)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RecipientName)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RecipientSurname)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RecipientSurname)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.RecipientIdentityNumber)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.RecipientIdentityNumber)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Status)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Status)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ShipmentDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ShipmentDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.DeliveryDate)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DeliveryDate)
                </dd>
                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Address)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Address)
                </dd>
            </dl>
        </div>
    </div>
    <div class="mt-4">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
        <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
    </div>
</div>

<style>
    body {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .container {
        max-width: 800px;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        border: none;
        border-radius: 8px;
    }

    .card-header {
        background-color: #007bff;
        color: white;
        font-weight: bold;
        border-top-left-radius: 8px;
        border-top-right-radius: 8px;
    }

    .card-body {
        padding: 2rem;
    }

    .btn {
        padding: 0.5rem 2rem;
        border-radius: 20px;
        font-size: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

    .btn-secondary {
        background-color: #6c757d;
        border: none;
    }
</style>